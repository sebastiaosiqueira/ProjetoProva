@model IEnumerable<Transportes.MVC.ViewModels.TransportadoraViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-default" @Html.ActionLink("Criar", "Create","Transportadora")</a>
</p>
<table class="table table-striped table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit","Transportadora",new { id = item.TransportadoraId }) |
           @Html.ActionLink("Detais", "Details", new { id = item.TransportadoraId }) |
        
                @Html.ActionLink("Delete", "Delete", new { id = item.TransportadoraId })
            </td>
        </tr>
    }

</table>
